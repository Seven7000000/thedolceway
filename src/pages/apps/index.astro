---
import Layout from '../../layouts/Layout.astro';
import { apps, categories } from '../../data/apps';

const categoryList = Object.entries(categories);
---

<Layout
  title="All Apps | The Dolce Way - 26 Apps. One Developer. Zero Excuses."
  description="Explore 26 apps built by one developer. Health, fitness, productivity, mindfulness, and utility apps designed to help you live better."
>
  <main class="apps-hub">
    <!-- Hero -->
    <section class="hero">
      <div class="container">
        <h1 class="hero-title">26 Apps. One Developer.<br/><span class="highlight">Zero Excuses.</span></h1>
        <p class="hero-subtitle">
          Every app here was built by me. No team. No VC money. Just problems worth solving and the discipline to ship.
        </p>

        <div class="stats">
          <div class="stat">
            <span class="stat-number">26</span>
            <span class="stat-label">Apps Built</span>
          </div>
          <div class="stat">
            <span class="stat-number">6</span>
            <span class="stat-label">Categories</span>
          </div>
          <div class="stat">
            <span class="stat-number">1</span>
            <span class="stat-label">Developer</span>
          </div>
        </div>
      </div>
      <div class="hero-gradient"></div>
    </section>

    <!-- Category Filter -->
    <section class="filter-section">
      <div class="container">
        <div class="filter-buttons">
          <button class="filter-btn active" data-category="all">
            All Apps
          </button>
          {categoryList.map(([key, cat]) => (
            <button class="filter-btn" data-category={key} style={`--cat-color: ${cat.color};`}>
              <span class="filter-icon">{cat.icon}</span>
              {cat.name}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Apps Grid -->
    <section class="apps-grid-section">
      <div class="container">
        <div class="apps-grid">
          {apps.map((app) => (
            <a href={`/apps/${app.slug}`} class="app-card" data-category={app.category}>
              <div class="app-icon-wrapper" style={`background: linear-gradient(135deg, ${app.color}22 0%, ${app.color}11 100%);`}>
                <img src={app.icon} alt={app.name} class="app-icon" />
              </div>
              <div class="app-info">
                <h3 class="app-name">{app.name}</h3>
                <p class="app-tagline">{app.tagline}</p>
                <div class="app-meta">
                  <span class="app-category" style={`color: ${categories[app.category].color};`}>
                    {categories[app.category].icon} {categories[app.category].name}
                  </span>
                  <span class="app-status" class:list={[app.status]}>
                    {app.status === 'live' ? '✓ Live' : app.status === 'beta' ? 'Beta' : 'Soon'}
                  </span>
                </div>
              </div>
              <div class="app-arrow" style={`color: ${app.color};`}>→</div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Building in Public</h2>
          <p>Follow the journey. See what's shipping. Join the waitlist for early access to everything.</p>
          <div class="cta-buttons">
            <a href="/blog" class="cta-btn primary">Read the Blog</a>
            <a href="/connect" class="cta-btn secondary">Follow Along</a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .apps-hub {
    min-height: 100vh;
    background: #0a0a0a;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Hero */
  .hero {
    position: relative;
    padding: 140px 24px 80px;
    text-align: center;
    overflow: hidden;
  }

  .hero-gradient {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background: radial-gradient(ellipse at top, rgba(139, 92, 246, 0.15) 0%, transparent 60%);
    pointer-events: none;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    color: #fff;
    margin: 0 0 20px 0;
    line-height: 1.2;
    position: relative;
    z-index: 1;
  }

  .highlight {
    background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.6);
    max-width: 600px;
    margin: 0 auto 48px;
    line-height: 1.7;
    position: relative;
    z-index: 1;
  }

  .stats {
    display: flex;
    justify-content: center;
    gap: 60px;
    position: relative;
    z-index: 1;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 800;
    color: #8B5CF6;
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Filter */
  .filter-section {
    padding: 0 24px 40px;
    position: sticky;
    top: 70px;
    z-index: 10;
    background: linear-gradient(180deg, #0a0a0a 0%, #0a0a0a 80%, transparent 100%);
  }

  .filter-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .filter-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    font-size: 14px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.6);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
  }

  .filter-btn.active {
    background: #8B5CF6;
    border-color: #8B5CF6;
    color: #fff;
  }

  .filter-btn[data-category]:not([data-category="all"]).active {
    background: var(--cat-color);
    border-color: var(--cat-color);
  }

  .filter-icon {
    font-size: 14px;
  }

  /* Apps Grid */
  .apps-grid-section {
    padding: 20px 24px 80px;
  }

  .apps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 20px;
  }

  .app-card {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .app-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-4px);
  }

  .app-card.hidden {
    display: none;
  }

  .app-icon-wrapper {
    width: 80px;
    height: 80px;
    min-width: 80px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .app-icon {
    width: 60px;
    height: 60px;
    border-radius: 14px;
  }

  .app-info {
    flex: 1;
  }

  .app-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    margin: 0 0 6px 0;
  }

  .app-tagline {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0 0 12px 0;
  }

  .app-meta {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .app-category {
    font-size: 0.85rem;
    font-weight: 500;
  }

  .app-status {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.4);
    padding: 4px 10px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 100px;
  }

  .app-status.live {
    color: #22C55E;
    background: rgba(34, 197, 94, 0.1);
  }

  .app-status.beta {
    color: #F59E0B;
    background: rgba(245, 158, 11, 0.1);
  }

  .app-arrow {
    font-size: 1.5rem;
    opacity: 0;
    transition: opacity 0.2s, transform 0.2s;
  }

  .app-card:hover .app-arrow {
    opacity: 1;
    transform: translateX(4px);
  }

  /* CTA */
  .cta-section {
    padding: 80px 24px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .cta-content {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
    margin: 0 0 12px 0;
  }

  .cta-content p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0 0 32px 0;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
  }

  .cta-btn {
    padding: 14px 28px;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 12px;
    transition: transform 0.2s;
  }

  .cta-btn.primary {
    background: #8B5CF6;
    color: #fff;
  }

  .cta-btn.secondary {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.8);
  }

  .cta-btn:hover {
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .stats {
      gap: 40px;
    }

    .stat-number {
      font-size: 2rem;
    }

    .apps-grid {
      grid-template-columns: 1fr;
    }

    .filter-section {
      top: 60px;
    }

    .cta-buttons {
      flex-direction: column;
    }
  }

  @media (max-width: 500px) {
    .hero {
      padding: 120px 16px 60px;
    }

    .hero-title {
      font-size: 2rem;
    }

    .stats {
      gap: 24px;
    }

    .filter-buttons {
      justify-content: flex-start;
      overflow-x: auto;
      flex-wrap: nowrap;
      padding-bottom: 10px;
      -webkit-overflow-scrolling: touch;
    }

    .filter-btn {
      white-space: nowrap;
    }
  }
</style>

<script>
  const filterButtons = document.querySelectorAll('.filter-btn');
  const appCards = document.querySelectorAll('.app-card');

  filterButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      // Update active state
      filterButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      const category = btn.getAttribute('data-category');

      // Filter cards
      appCards.forEach(card => {
        if (category === 'all' || card.getAttribute('data-category') === category) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    });
  });
</script>
