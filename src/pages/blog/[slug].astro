---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;
const { Content } = await post.render();

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout title={`${post.data.title} | The Dolce Way`} description={post.data.description}>
  <article class="pt-32 pb-20 px-6">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <header class="mb-12">
        <div class="flex flex-wrap gap-2 mb-4">
          {post.data.tags.map((tag) => (
            <span class="text-xs text-accent bg-accent/10 px-2 py-1 rounded">
              {tag}
            </span>
          ))}
        </div>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-heading leading-tight mb-4">
          {post.data.title}
        </h1>
        <p class="text-subtle">{formatDate(post.data.date)}</p>
      </header>

      <!-- Content -->
      <div class="prose prose-invert prose-lg max-w-none
        prose-headings:text-heading prose-headings:font-bold
        prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-4
        prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-3
        prose-p:text-body prose-p:leading-relaxed prose-p:mb-6
        prose-a:text-accent prose-a:no-underline hover:prose-a:underline
        prose-strong:text-heading prose-strong:font-semibold
        prose-ul:text-body prose-li:mb-2
        prose-blockquote:border-l-accent prose-blockquote:text-subtle prose-blockquote:italic
        prose-code:text-accent prose-code:bg-surface-light prose-code:px-1 prose-code:rounded
      ">
        <Content />
      </div>

      <!-- Footer -->
      <footer class="mt-16 pt-12 border-t border-border">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-6">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-subtle hover:text-accent transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
            </svg>
            Back to Blog
          </a>
          <a
            href="/connect"
            class="inline-flex items-center gap-2 text-accent hover:text-accent-light font-medium"
          >
            Follow the journey
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </footer>
    </div>
  </article>
</Layout>
