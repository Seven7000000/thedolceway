---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const featuredPost = posts[0];
const otherPosts = posts.slice(1);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}

function getReadingTime(content: string): number {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
}
---

<Layout title="Blog | The Dolce Way" description="Build in public updates, AI tools, mindset, and the journey to an app empire.">
  <div class="blog-page">
    <section class="hero">
      <div class="hero-inner">
        <span class="label">The Blog</span>
        <h1 class="title">Real talk.<br/><span class="gradient">No filter.</span></h1>
        <p class="subtitle">Building in public. What's working. What's not. The unfiltered journey.</p>

        <!-- Search Bar -->
        <div class="search-container">
          <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="M21 21l-4.35-4.35"/>
          </svg>
          <input
            type="text"
            id="blog-search"
            class="search-input"
            placeholder="Search posts..."
            autocomplete="off"
          />
          <span id="search-results-count" class="search-count"></span>
        </div>
      </div>
    </section>

    {featuredPost && (
      <section class="featured" id="featured-section">
        <div class="featured-inner">
          <a
            href={`/blog/${featuredPost.slug}`}
            class="featured-card"
            id="featured-card"
            data-title={featuredPost.data.title.toLowerCase()}
            data-description={featuredPost.data.description.toLowerCase()}
            data-tags={featuredPost.data.tags.join(' ').toLowerCase()}
          >
            {featuredPost.data.image && (
              <div class="featured-image">
                <img src={featuredPost.data.image} alt={featuredPost.data.title} />
              </div>
            )}
            <div class="featured-content">
              <div class="featured-meta">
                <span class="featured-label">Latest</span>
                <span class="featured-date">{formatDate(featuredPost.data.date)}</span>
              </div>
              <h2 class="featured-title">{featuredPost.data.title}</h2>
              <p class="featured-description">{featuredPost.data.description}</p>
              <div class="featured-tags">
                {featuredPost.data.tags.slice(0, 3).map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <span class="read-more">
                Read article
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </span>
            </div>
          </a>
        </div>
      </section>
    )}

    <section class="posts">
      <div class="posts-inner">
        <div class="posts-header">
          <div class="posts-header-left">
            <h2 class="posts-title">All Posts</h2>
            <span class="posts-count">{posts.length} articles</span>
          </div>
          <a href="/blog/tags" class="browse-tags">
            Browse by tag
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <div class="posts-grid" id="posts-grid">
          {otherPosts.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="post-card"
              data-title={post.data.title.toLowerCase()}
              data-description={post.data.description.toLowerCase()}
              data-tags={post.data.tags.join(' ').toLowerCase()}
            >
              {post.data.image && (
                <div class="post-thumbnail">
                  <img src={post.data.image} alt={post.data.title} loading="lazy" />
                </div>
              )}
              <div class="post-meta">
                <span class="post-date">{formatDate(post.data.date)}</span>
              </div>
              <h3 class="post-title">{post.data.title}</h3>
              <p class="post-description">{post.data.description}</p>
              <div class="post-tags">
                {post.data.tags.slice(0, 2).map((tag) => (
                  <span class="tag-small">{tag}</span>
                ))}
              </div>
            </a>
          ))}
        </div>
        <p id="no-results" class="no-results" style="display: none;">No posts found. Try a different search.</p>
      </div>
    </section>

    <section class="cta">
      <div class="cta-inner">
        <p class="cta-text">Want updates when new posts drop?</p>
        <a href="/connect#newsletter" class="cta-link">
          Follow the journey
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .blog-page {
    --bg: #050505;
    --bg-elevated: #0a0a0a;
    --bg-card: #0c0c0c;
    --text: #fafafa;
    --text-secondary: #a1a1aa;
    --text-muted: #52525b;
    --border: #1c1c1c;
    --accent: #8b5cf6;

    background: var(--bg);
    min-height: 100vh;
  }

  /* Hero */
  .hero {
    padding: 140px 24px 80px;
    text-align: center;
    position: relative;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border), transparent);
  }

  .hero-inner {
    max-width: 600px;
    margin: 0 auto;
  }

  .label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    color: var(--text);
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin: 0 0 16px 0;
  }

  .gradient {
    background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 50%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  /* Featured */
  .featured {
    padding: 60px 24px;
  }

  .featured-inner {
    max-width: 800px;
    margin: 0 auto;
  }

  .featured-card {
    display: block;
    padding: 40px;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 20px;
    text-decoration: none;
    transition: all 250ms ease;
    position: relative;
    overflow: hidden;
  }

  .featured-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at top left, rgba(139, 92, 246, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .featured-card:hover {
    border-color: rgba(139, 92, 246, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .featured-content {
    position: relative;
  }

  .featured-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .featured-label {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--accent);
    background: rgba(139, 92, 246, 0.1);
    padding: 4px 10px;
    border-radius: 4px;
  }

  .featured-date {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .featured-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: var(--text);
    margin: 0 0 12px 0;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .featured-description {
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0 0 20px 0;
    line-height: 1.6;
  }

  .featured-tags {
    display: flex;
    gap: 8px;
    margin-bottom: 24px;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--text-secondary);
    background: rgba(255, 255, 255, 0.05);
    padding: 4px 10px;
    border-radius: 4px;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--accent);
    transition: gap 200ms ease;
  }

  .featured-card:hover .read-more {
    gap: 10px;
  }

  .featured-image {
    margin-bottom: 24px;
    border-radius: 12px;
    overflow: hidden;
  }

  .featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Posts Grid */
  .posts {
    padding: 60px 24px 80px;
  }

  .posts-inner {
    max-width: 1000px;
    margin: 0 auto;
  }

  .posts-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--border);
    flex-wrap: wrap;
    gap: 12px;
  }

  .posts-header-left {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .browse-tags {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.8125rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 200ms ease, gap 200ms ease;
  }

  .browse-tags:hover {
    color: var(--accent);
    gap: 10px;
  }

  .posts-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text);
    margin: 0;
    letter-spacing: -0.01em;
  }

  .posts-count {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
  }

  .post-card {
    display: flex;
    flex-direction: column;
    padding: 24px;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 14px;
    text-decoration: none;
    transition: all 200ms ease;
  }

  .post-card:hover {
    border-color: #2a2a2a;
    background: var(--bg-card);
    transform: translateY(-2px);
  }

  .post-thumbnail {
    margin: -24px -24px 16px -24px;
    border-radius: 14px 14px 0 0;
    overflow: hidden;
  }

  .post-thumbnail img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    display: block;
  }

  .post-meta {
    margin-bottom: 12px;
  }

  .post-date {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .post-title {
    font-size: 1.0625rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 8px 0;
    letter-spacing: -0.01em;
    line-height: 1.35;
    transition: color 200ms ease;
  }

  .post-card:hover .post-title {
    color: var(--accent);
  }

  .post-description {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin: 0 0 16px 0;
    line-height: 1.5;
    flex: 1;
  }

  .post-tags {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }

  .tag-small {
    font-size: 0.6875rem;
    color: var(--text-muted);
    background: rgba(255, 255, 255, 0.03);
    padding: 3px 8px;
    border-radius: 3px;
  }

  /* CTA */
  .cta {
    padding: 60px 24px;
    position: relative;
  }

  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border), transparent);
  }

  .cta-inner {
    max-width: 400px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-text {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    margin: 0 0 16px 0;
  }

  .cta-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--accent);
    text-decoration: none;
    transition: gap 200ms ease, opacity 200ms ease;
  }

  .cta-link:hover {
    gap: 10px;
    opacity: 0.8;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .hero {
      padding: 120px 16px 60px;
    }

    .featured {
      padding: 40px 16px;
    }

    .featured-card {
      padding: 24px;
    }

    .posts {
      padding: 40px 16px 60px;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .search-container {
      padding: 0 16px;
    }
  }

  /* Search */
  .search-container {
    position: relative;
    max-width: 400px;
    margin: 32px auto 0;
  }

  .search-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-muted);
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: 14px 16px 14px 48px;
    font-size: 0.9375rem;
    color: var(--text);
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 12px;
    outline: none;
    transition: border-color 200ms ease, box-shadow 200ms ease;
  }

  .search-input::placeholder {
    color: var(--text-muted);
  }

  .search-input:focus {
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
  }

  .search-count {
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .no-results {
    text-align: center;
    color: var(--text-muted);
    padding: 40px 20px;
    font-size: 0.9375rem;
  }

  .post-card.hidden,
  .featured-card.hidden {
    display: none;
  }
</style>

<script>
  const searchInput = document.getElementById('blog-search');
  const postsGrid = document.getElementById('posts-grid');
  const featuredSection = document.getElementById('featured-section');
  const featuredCard = document.getElementById('featured-card');
  const resultsCount = document.getElementById('search-results-count');
  const noResults = document.getElementById('no-results');

  if (searchInput && postsGrid) {
    const postCards = postsGrid.querySelectorAll('.post-card');

    searchInput.addEventListener('input', (e) => {
      const query = e.target.value.toLowerCase().trim();

      if (!query) {
        // Show all posts
        postCards.forEach(card => card.classList.remove('hidden'));
        if (featuredCard) featuredCard.classList.remove('hidden');
        if (featuredSection) featuredSection.style.display = '';
        if (resultsCount) resultsCount.textContent = '';
        if (noResults) noResults.style.display = 'none';
        return;
      }

      let visibleCount = 0;

      // Filter featured post
      if (featuredCard) {
        const title = featuredCard.dataset.title || '';
        const description = featuredCard.dataset.description || '';
        const tags = featuredCard.dataset.tags || '';
        const matches = title.includes(query) || description.includes(query) || tags.includes(query);

        if (matches) {
          featuredCard.classList.remove('hidden');
          featuredSection.style.display = '';
          visibleCount++;
        } else {
          featuredCard.classList.add('hidden');
          featuredSection.style.display = 'none';
        }
      }

      // Filter other posts
      postCards.forEach(card => {
        const title = card.dataset.title || '';
        const description = card.dataset.description || '';
        const tags = card.dataset.tags || '';
        const matches = title.includes(query) || description.includes(query) || tags.includes(query);

        if (matches) {
          card.classList.remove('hidden');
          visibleCount++;
        } else {
          card.classList.add('hidden');
        }
      });

      // Update results count
      if (resultsCount) {
        resultsCount.textContent = visibleCount > 0 ? `${visibleCount} found` : '';
      }

      // Show no results message
      if (noResults) {
        noResults.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    });
  }
</script>
