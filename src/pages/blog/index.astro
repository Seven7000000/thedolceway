---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout title="Blog | The Dolce Way" description="Build in public updates, AI tools, mindset, and the journey to an app empire.">
  <section class="pt-32 pb-20 px-6">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <p class="text-accent font-medium mb-4 tracking-wide uppercase text-sm">The Blog</p>
        <h1 class="text-4xl md:text-5xl font-bold text-heading leading-tight mb-6">
          Real Talk. <span class="gradient-text">No Filter.</span>
        </h1>
        <p class="text-xl text-subtle max-w-xl mx-auto">
          Build in public updates. AI tools. Mindset. The unfiltered journey.
        </p>
      </div>

      <!-- Posts -->
      {posts.length > 0 ? (
        <div class="space-y-6">
          {posts.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="group block p-6 bg-surface border border-border rounded-xl hover:border-accent/50 transition-all hover:glow"
            >
              <div class="flex flex-wrap gap-2 mb-3">
                {post.data.tags.map((tag) => (
                  <span class="text-xs text-accent bg-accent/10 px-2 py-1 rounded">
                    {tag}
                  </span>
                ))}
              </div>
              <h2 class="text-xl font-semibold text-heading mb-2 group-hover:text-accent transition-colors">
                {post.data.title}
              </h2>
              <p class="text-subtle mb-4">{post.data.description}</p>
              <p class="text-sm text-muted">{formatDate(post.data.date)}</p>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-20">
          <p class="text-subtle mb-4">First post dropping soon.</p>
          <p class="text-heading font-semibold">Stay tuned.</p>
        </div>
      )}

      <!-- CTA -->
      <div class="mt-16 pt-12 border-t border-border text-center">
        <p class="text-subtle mb-4">Want the updates as they drop?</p>
        <a
          href="/connect"
          class="inline-flex items-center gap-2 text-accent hover:text-accent-light font-medium"
        >
          Follow the journey
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>
