---
interface Props {
  appName: string;
  tagline: string;
  color: string;
  icon: string;
}

const { appName, tagline, color, icon } = Astro.props;
---

<div class="mockup-container">
  <div class="iphone-frame">
    <div class="iphone-notch"></div>
    <div class="iphone-screen" style={`background: linear-gradient(135deg, ${color}22 0%, ${color}44 100%);`}>
      <div class="app-preview">
        <img src={icon} alt={appName} class="preview-icon" />
        <h3 class="preview-name">{appName}</h3>
        <p class="preview-tagline">{tagline}</p>
        <div class="preview-ui">
          <div class="ui-element" style={`background: ${color};`}></div>
          <div class="ui-element secondary"></div>
          <div class="ui-element secondary short"></div>
        </div>
        <div class="preview-button" style={`background: ${color};`}>
          Get Started
        </div>
      </div>
    </div>
    <div class="iphone-home-bar"></div>
  </div>
</div>

<style>
  .mockup-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .iphone-frame {
    width: 280px;
    height: 580px;
    background: linear-gradient(145deg, #1a1a1a 0%, #0a0a0a 100%);
    border-radius: 50px;
    padding: 12px;
    box-shadow:
      0 50px 100px -20px rgba(0, 0, 0, 0.5),
      0 30px 60px -30px rgba(0, 0, 0, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
  }

  .iphone-notch {
    width: 120px;
    height: 30px;
    background: #0a0a0a;
    border-radius: 0 0 20px 20px;
    position: absolute;
    top: 12px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
  }

  .iphone-screen {
    width: 100%;
    height: 100%;
    border-radius: 40px;
    overflow: hidden;
    position: relative;
  }

  .app-preview {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    padding: 60px 24px 40px;
    text-align: center;
  }

  .preview-icon {
    width: 80px;
    height: 80px;
    border-radius: 18px;
    margin-bottom: 16px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .preview-name {
    font-size: 22px;
    font-weight: 700;
    color: #fff;
    margin: 0 0 8px 0;
  }

  .preview-tagline {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.7);
    margin: 0 0 30px 0;
  }

  .preview-ui {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 30px;
  }

  .ui-element {
    height: 44px;
    border-radius: 12px;
    opacity: 0.9;
  }

  .ui-element.secondary {
    background: rgba(255, 255, 255, 0.15);
    height: 36px;
  }

  .ui-element.short {
    width: 70%;
  }

  .preview-button {
    padding: 14px 40px;
    border-radius: 25px;
    color: #fff;
    font-weight: 600;
    font-size: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .iphone-home-bar {
    width: 120px;
    height: 5px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 3px;
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
  }
</style>
